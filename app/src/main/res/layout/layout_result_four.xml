<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_four_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/result_four_iv_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_flakes"/>
        <ImageView
            android:id="@+id/result_four_iv_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:layout_margin="15dp"
            android:src="@drawable/ic_flakes"/>
        <ImageView
            android:id="@+id/result_four_iv_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:layout_margin="15dp"
            android:src="@drawable/ic_flakes"/>
        <ImageView
            android:id="@+id/result_four_iv_4"
            android:layout_width="100dp"
            android:scaleType="centerInside"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_flakes"/>
    </GridLayout>

    <ImageView
        android:id="@+id/result_four_iv_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_background_ramen_result"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/result_four_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textSize="55dp"
        android:textColor="@color/colorWhite"
        android:text="T1"/>
    <TextView
        android:id="@+id/result_four_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="12dp"
        android:textSize="55dp"

        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="t2"/>
    <TextView
        android:id="@+id/result_four_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:textSize="55dp"
        android:textColor="@color/colorWhite"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:text="t3"/>
    <TextView
        android:id="@+id/result_four_tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp"
        android:textSize="55dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="t4"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/result_four_tv_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"

            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="31dp"
            android:layout_marginLeft="5dp"

            android:textColor="@color/colorWhite"
            android:text="%"/>
    </LinearLayout>
</FrameLayout>