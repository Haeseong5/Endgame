<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_kmbti_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/result_kmbti_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_zzamzzicbemil"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/result_kmbti_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_margin="12dp"
        android:textSize="55dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/result_kmbti_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="12dp"
        android:textSize="55dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/result_kmbti_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:textSize="55dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_margin="12dp"/>
    <TextView
        android:id="@+id/result_kmbti_tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="12dp"
        android:textSize="55dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/result_kmbti_tv_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="31dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorWhite"
            android:text="%"/>
    </LinearLayout>
</FrameLayout>