<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_ramen_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- first -->
        <ImageView
            android:id="@+id/result_ramen_iv_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="55dp"
            android:src="@drawable/ic_flakes"/>

        <!-- second -->

        <ImageView
            android:id="@+id/result_ramen_iv_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="55dp"
            android:layout_gravity="bottom|start"
            android:src="@drawable/ic_flakes"/>

        <!-- third -->

        <ImageView
            android:id="@+id/result_ramen_iv_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="55dp"
            android:src="@drawable/ic_flakes"/>

    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_background_ramen_result"
        android:adjustViewBounds="true"/>

        <!-- first -->
        <TextView
            android:id="@+id/result_ramen_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:layout_margin="12dp"
            android:layout_gravity="center|top"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="T1"/>


    <!-- second -->
    <TextView
            android:id="@+id/result_ramen_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:layout_margin="12dp"
            android:layout_gravity="bottom|start"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="T2"/>


    <!-- third -->
        <TextView
            android:id="@+id/result_ramen_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:layout_gravity="bottom|end"
            android:textColor="@color/colorWhite"
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:text="T3"/>

    <!-- center ratio -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/result_ramen_tv_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="31dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorWhite"
            android:text="%"/>
    </LinearLayout>
</FrameLayout>