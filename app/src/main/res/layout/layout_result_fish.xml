<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_fish_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- first -->
        <ImageView
            android:id="@+id/result_fish_iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:src="@drawable/ic_body"/>

        <!-- second -->

        <ImageView
            android:id="@+id/result_fish_iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_head"/>

        <!-- third -->

        <ImageView
            android:id="@+id/result_fish_iv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_tail"/>

    </LinearLayout>
    <!--background-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_fish_bg_gradient"
        android:adjustViewBounds="true"/>


    <!-- first -->
    <TextView
        android:id="@+id/result_fish_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="55dp"
        android:layout_margin="12dp"
        android:layout_gravity="center|top"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"

        android:text="T1"/>


    <!-- second -->
    <TextView
        android:id="@+id/result_fish_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="55dp"
        android:layout_margin="12dp"
        android:layout_gravity="bottom|start"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="T2"/>


    <!-- third -->
    <TextView
        android:id="@+id/result_fish_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="55dp"
        android:layout_gravity="bottom|end"
        android:textColor="@color/colorWhite"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:text="T3"/>

    <!-- center ratio -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/result_fish_tv_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="31dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorWhite"
            android:text="%"/>
    </LinearLayout>
</FrameLayout>