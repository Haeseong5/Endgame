<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/item_result_comment_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nickname"
            android:textColor="@color/colorWhite" />

        <ImageView
            android:id="@+id/item_result_comment_iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_result_comment_tv_like"
            android:src="@drawable/btn_like" />

        <TextView
            android:id="@+id/item_result_comment_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_result_comment_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_chat_2line"
        android:padding="10dp"
        android:text="content\n\n\n"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="10dp"
        android:textSize="16dp" />
</LinearLayout>